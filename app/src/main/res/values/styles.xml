<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/wongnai_blue</item>
        <item name="colorPrimaryVariant">@color/wongnai_blue1</item>
        <item name="colorSecondary">@color/wongnai_orange</item>
        <item name="colorSecondaryVariant">@color/wongnai_orange1</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.Primary</item>
    </style>

    <style name="BasePrinter" parent="AppTheme">
        <item name="textAppearanceHeadline1">@style/TextAppearance.Printer.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Printer.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Printer.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Printer.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Printer.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Printer.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Printer.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Printer.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Printer.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Printer.Body2</item>
    </style>

    <style name="Printer" parent="BasePrinter" />
    <style name="Printer.Large">
        <item name="textAppearanceHeadline1">@style/TextAppearance.Printer.Large.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Printer.Large.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Printer.Large.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Printer.Large.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Printer.Large.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Printer.Large.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Printer.Large.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Printer.Large.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Printer.Large.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Printer.Large.Body2</item>
    </style>
</resources>
