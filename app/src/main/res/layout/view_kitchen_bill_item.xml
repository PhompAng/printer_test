<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal">

	<TextView
		android:id="@+id/billItemAmountTextView"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:textAppearance="?textAppearanceHeadline6"
		tools:text="1" />

	<LinearLayout
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="6"
		android:orientation="vertical">

		<TextView
			android:id="@+id/billItemNameTextView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textAppearance="?textAppearanceHeadline6"
			tools:text="order item" />

		<LinearLayout
			android:id="@+id/billItemOptionLayout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			tools:background="@color/gray300"
			tools:layout_height="100dp" />

		<TextView
			android:id="@+id/billItemNoteTextView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?textAppearanceBody1"
			tools:text="# note item" />
	</LinearLayout>

</LinearLayout>
